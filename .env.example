# =========================
# Core Application
# =========================
NODE_ENV=development
PORT=3000

# =========================
# Database (choose one)
# =========================
# PostgreSQL example:
# DATABASE_URL="postgresql://user:password@localhost:5432/ai_marketing_engine"
# For mock/no-db mode (leave blank):
DATABASE_URL=

# =========================
# n8n Integration
# =========================
N8N_API_BASE_URL=http://localhost:5678/api/v1
N8N_API_KEY=replace_me
N8N_BASE_URL=http://localhost:5678
N8N_TEMPLATE_WORKFLOW_ID=1

# =========================
# Auth / Security
# =========================
# IMPORTANT: Generate a strong 256-bit secret for production
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# NEVER commit the real JWT_SECRET to git!
JWT_SECRET=replace_with_long_random_string

# =========================
# Cloudflare R2 (Media Storage)
# =========================
# Mandatory credentials
R2_ACCOUNT_ID=xxxxxxxxxxxxxxxxxxxx
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=media

# Public URLs
# Production custom domain (recommended): point a CNAME to the bucket and set here.
# Example: https://media.yourdomain.com
R2_PUBLIC_BASE_URL=

# Development public URL (enabled via Cloudflare dashboard). Rate-limited, no caching.
# Example format: https://pub-<id>.r2.dev
R2_PUBLIC_DEV_URL=

# If both are set, code will prefer R2_PUBLIC_BASE_URL.
# If neither set, it falls back to https://<account_id>.r2.cloudflarestorage.com/<bucket>/<key>

# =========================
# AI Provider (OpenAI etc.)
# =========================
OPENAI_API_KEY=sk-...

# =========================
# Other optional vars
# =========================
# Add any platform specific tokens below as you integrate them.
# FACEBOOK_PAGE_ACCESS_TOKEN=
# INSTAGRAM_ACCESS_TOKEN=

# =========================
# Notes
# =========================
# 1. Copy this file to .env.local and fill real values.
# 2. Never commit .env.local to git.
# 3. After changing env vars, restart dev server.
